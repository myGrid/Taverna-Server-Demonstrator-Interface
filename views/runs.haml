%h1= 'Runs'
- if (!(current_runs.empty?)) then
  #current-runs
    %table{:"title" => "Current runs", :"border" => "1"}
      %caption= "Current runs"
      %tr
        %th= "Identification"
        %th= "Creation time"
        %th= "Action"
      - current_runs.each do |r|
        %tr
          %td
            %a{:href => "/run/#{r.identifier}"} #{workflow_name_map[r]}
          %td= "#{r.create_time().utc}"
          %td
            %form{:method => "link", :action => "/run/#{r.identifier}/delete"}
              %input{:type => "submit", :value=>"Cancel", :class => "button"}
- if (!(finished_runs.empty?)) then
  #finished-runs
    %table{:"title" => "Finished runs", :"border" => "1"}
      %caption= "Finished runs"
      %tr
        %th= "Identification"
        %th= "Creation time"
        %th= "Finish time"
        %th= "Results"
        %th= "Action"
      - finished_runs.each do |r|
        %tr
          %td
            %a{:href => "/run/#{r.identifier}"} #{workflow_name_map[r]}
          %td= "#{r.create_time().utc}"
          %td= "#{r.finish_time().utc}"
          %td
            - if (r.exitcode() == 0) then
              %a{:href =>"/run/#{r.identifier}/resultset"}Results
            - else
              %a{:href => "/run/#{r.identifier}/error"}Error
          %td
            %form{:method => "link", :action => "/run/#{r.identifier}/delete"}
              %input{:type => "submit", :value=>"Delete", :class => "button"}
%form{:method => "link", :action => "/runs/delete_all"}
  %input{:type => "submit", :value=>"Delete all runs", :class => "button"}
